# ========================================
# PROMTAIL CONFIGURATION
# ========================================
server:
  http_listen_port: {{ promtail_port }}
  grpc_listen_port: 0

# Куда отправлять логи
clients:
  - url: http://loki:3100/loki/api/v1/push

# Откуда собирать логи
scrape_configs:
  # Docker контейнеры
  - job_name: docker
    static_configs:
      - targets:
          - localhost
        labels:
          job: docker
          __path__: /var/lib/docker/containers/*/*.log

    # Парсинг Docker JSON логов
    pipeline_stages:
      - json:
          expressions:
            output: log
            stream: stream
            attrs: attrs
            tag: attrs.tag
      
      - json:
          expressions:
            container_name: attrs.tag
          source: attrs
      
      - regex:
          expression: '(?P<container_name>[\w\-]+)'
          source: container_name
      
      - labels:
          container_name:
          stream:
      
      - output:
          source: output

  # Системные логи хоста
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: system
          __path__: /var/log/*.log

  # Syslog
  - job_name: syslog
    static_configs:
      - targets:
          - localhost
        labels:
          job: syslog
          __path__: /var/log/messages

    pipeline_stages:
      - regex:
          expression: '^(?P<timestamp>\w+\s+\d+\s+\d+:\d+:\d+)\s+(?P<hostname>\S+)\s+(?P<service>\S+):\s+(?P<message>.*)$'
      
      - labels:
          hostname:
          service:
      
      - timestamp:
          source: timestamp
          format: 'Jan _2 15:04:05'
          location: 'UTC'